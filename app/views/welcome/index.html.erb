<div class="home-picture">
  <h2>
    <span class="catchphrase">Book Lodging</span><br>
    in the most obscure places on earth.
  </h2>
</div>
<div class="search-area">
  <%= form_tag listings_path, method: 'get' do %>
    <p>
      <%= select_tag :location_id, Location.all.map{ |l| ["#{l.continent}", l.id ] }, selected: params[:location] %>
      <%= label_tag :from %>
      <%= text_field_tag :from, params[:from] %>
      <%= label_tag :to %>
      <%= text_field_tag :to, params[:to] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
</div>