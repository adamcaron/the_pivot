<div class="cart">
  <div class="cart-picture">
    <img>
  </div>
  <h3 id="cart-title">Cart</h3>

  <div class="cart-container">
    <div class="demo-grid-2 mdl-grid">
      <div class="mdl-cell mdl-cell--6-col">
        <table id="cart-table" class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
          <thead>
          <tr>
            <%#<th id="quantity-col">Quantity</th>%>
            <%#<th id="quantity-col">+/-</th>%>
            <th id="name-col">Name</th>
            <th id="continent-col" class="mdl-data-table__cell--non-numeric">Location</th>
            <th id="price-col">Price</th>
          </tr>
          </thead>
          <tbody>
            <tr>
              <%#<td class="quantity"><%=  %></td>%>
              <%#<td><%= button_to "+", "#", class: "cart-item-quantity-button" %>%>
                <%#<%= button_to "-", "#", class: "cart-item-quantity-button" %></td>%>
              <td id="trip-link" class="name mdl-data-table__cell&#45;&#45;non-numeric"></button><#%= link_to "#{listing.name}", listing_path(listing) %></td>
              <td><#%= number_to_currency(listing.total_cost) %></td>
              <td id="delete-link"><#%= link_to "Remove", cart_path(listing), method: :delete %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="mdl-cell mdl-cell--6-col">
        <table id="cart-total" class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
          <thead>
          <tr>
            <th>Total Price</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td>
              <%# row_total_cost = listing.total_cost.map do |trip| %>
                <%# listing.quantity * listing.total_cost %>
              <%# end %>
              <%#= number_to_currency(row_total_cost.reduce(:+)) %>
            </td>
          </tr>
          <tr>
            <td id="checkout" class="mdl-data-table__cell--non-numeric"><%= link_to "Checkout", listings_path, method: :post %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
