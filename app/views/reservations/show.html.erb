<table id="reservation-table" class="mdl-data-table mdl-js-data-table"> '
  <thead>
  <tr>
    <th id="table-title" class="mdl-data-table__cell--non-numeric">Reservation # <%= @reservation.id %></th>
    <th id="table-title" class="mdl-data-table__cell--non-numeric"></th>
    <th id="table-title" class="mdl-data-table__cell--non-numeric"></th>
    <th id="table-title" class="mdl-data-table__cell--non-numeric"></th>
    <th id="table-title" class="mdl-data-table__cell--non-numeric"></th>
  </tr>
  <tr>
    <th class="mdl-data-table__cell--non-numeric">Trip</th>
    <th>Quantity</th>
    <th>Total Cost</th>
    <th class="mdl-data-table__cell--non-numeric">Date Ordered</th>
    <th class="mdl-data-table__cell--non-numeric">Status</th>
  </tr>
  </thead>
  <tbody>
  <% @reservation.reservation_trips.each do |reservation_trip| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric"><%= link_to reservation_trip.trip.name, trip_path(reservation_trip.trip) %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= reservation_trip.quantity %></td>
        <td><%= number_to_currency(reservation_trip.trip.total_cost * reservation_trip.quantity) %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= (reservation_trip.trip.created_at).to_formatted_s(:long) %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= @reservation.status %></td>
      </tr>
  <% end %>
  </tbody>
</table>
