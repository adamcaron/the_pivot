

<article>
  <h1 id="title">Plan Listing by Continent</h1>


  <div class="demo-grid-1 mdl-grid">

    <% @locations.sort_by(&:continent).each do |location| %>

        <div class="mdl-cell mdl-cell--4-col"><div id="whole-card" class="mdl-card mdl-shadow--2dp demo-card-wide">
          <div class="mdl-card__title">
            <h3 class="mdl-card__title-text"><%= location.continent %></h3>
          </div>
          <div class="<%= location.continent.split.join("-").downcase %>-picture">
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= link_to "Browse Activities", location_path(location.id), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          </div>
        </div></div>

    <% end %>
  </div>
</article>
